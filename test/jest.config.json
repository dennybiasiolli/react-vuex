{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.*"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/index.js",
    "<rootDir>/node_modules/"
  ],
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/src/$1"
  },
  "rootDir": "..",
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/test/unit/**/*.js"
  ]
}
